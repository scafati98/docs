{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "Autonoma",
  "logo": {
    "dark": "/logo-hd-white.svg",
    "light": "/logo-hd-dark.svg"
  },
  "favicon": "/logo-hd-dark.svg",
  "colors": {
    "primary": "#4f46e5",
    "light": "#4f46e5",
    "dark": "#4f46e5"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "dark": "#1a1a1a"
    }
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:info@autonoma.app"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://autonoma.app"
  },
  "fonts": {
    "heading": {
      "family": "Inter",
      "weight": 500
    },
    "body": {
      "family": "Inter",
      "weight": 400
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "icon": "globe",
          "href": "https://autonoma.app/"
        },
        {
          "anchor": "Feature Requests",
          "icon": "pencil",
          "href": "https://autonoma.bettermode.io/"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Get Started",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["introduction", "getting_started"]
          },
          {
            "group": "Creating Tests",
            "pages": [
              "applications",
              "build-for-ios-apps",
              "new_test",
              "writing_tests"
            ]
          },
          {
            "group": "Running Tests",
            "pages": ["running_tests", "cicd_integration", "slack-integration"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Using the API",
            "pages": ["overview"]
          },
          {
            "group": "API Reference",
            "pages": [
              {
                "group": "Test",
                "pages": [
                  "api-reference/list-tests",
                  "api-reference/get-a-specific-test"
                ]
              },
              {
                "group": "Folder",
                "pages": [
                  "api-reference/list-folders",
                  "api-reference/get-a-specific-folder"
                ]
              },
              {
                "group": "Run",
                "pages": [
                  "api-reference/run-a-test-by-test-id",
                  "api-reference/run-tests-by-folder-id",
                  "api-reference/list-test-runs",
                  "api-reference/get-a-specific-test-run",
                  "api-reference/get-steps-for-a-test-run",
                  "api-reference/get-a-specific-run-status",
                  "api-reference/get-a-specific-run-folder-status"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/autonoma-ai/"
    },
    "links": [
      {
        "header": "Product",
        "items": [
          {
            "label": "Autonoma",
            "href": "https://autonoma.app/"
          }
        ]
      }
    ]
  }
}
